  .column.span-2.last
  .column.span-2 &nbsp;
  #for_hide.column.span-10.elevate.addColour
   #accordion{:title=> "Select destination"}
    %h3
     %a{:href=>"#"}Historic Places
    %div
     -@mapdata= Map.find(:all,:conditions=>"catagory='historic'") 
     -@mapdata.each do |c|
      %p=link_to "#{c.name}",'#',:class => 'my-link',:"data-lng"=> "#{c.lat}",:"data-lat"=> "#{c.lng}" 
