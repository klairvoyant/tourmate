!!! 5
%html
 %head
  %title Tour Mate
  =javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=false','jquery-1.6.min','jquery.bt.min','rails','application','jquery-ui-1.8.12.custom.min'
  =stylesheet_link_tag 'map','blueprint/liquid','http://fonts.googleapis.com/css?family=Tangerine', :media => 'screen'
  =stylesheet_link_tag 'blueprint/print', :media => 'print'
  /[if lt IE 8] <haml:loud> stylesheet_link_tag 'blueprint/ie', :media ='screen' </haml:loud>
  =stylesheet_link_tag 'ui-darkness/jquery-ui-1.8.12.custom', :media => 'screen'
  =csrf_meta_tag
 %body.container	
